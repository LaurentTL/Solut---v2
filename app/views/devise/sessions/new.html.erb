<div id="profile-show">
  <div class="content-wrapper">
    <div class="container-profile">
      <h2 class="title-profile">SIGN IN</h2>
      <div class="container-login">
        <!-- <h2 class="title-signin">Sign in</h2> -->
        <br />
        <br />
        <br />
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <div class="btn-position-profile">
              <%= f.button :submit, "LOG IN", id: "profile-btn" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
