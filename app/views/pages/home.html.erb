<div class="left-scene" id="home-pic">
  <% if user_signed_in? %>
  <% else  %>
  <span class="border"><%= link_to "LOGIN", new_user_session_path, class:"btn-login" %></span>
  <% end %>
  <span class="border"><%= link_to "DISCOVER", events_path, class:"btn-login" %></span>
</div>
<div class="right-scene">
  <div class="login-container">
    <h1>SOL'UT</h1>
    <p>Join the band</p>
    <div class="container-login">
      <h2>Log to your <br> account</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-input">
          <%= f.input :email, placeholder: 'Email', label: false, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, placeholder: 'password', label: false, required: false, input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <div class="btn-position-profile">
            <%= f.button :submit, "LOG IN", id: "arrow-btn" %>
          </div>
        </div>
      <% end %>
      <div class="log-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>



