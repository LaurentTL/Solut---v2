<img src="https://images.unsplash.com/photo-1493246886675-0042d822e0db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="Sol'ut expert">
<div class="login-container">
  <h1>SOL'UT</h1>
  <p>Join the band</p>
  <div class="container-login">
    <h2>Log to your <br> account</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-input">
        <%= f.input :email, placeholder: 'Email', label: false, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :password, placeholder: 'password', label: false, required: false, input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <div class="btn-position-profile">
          <%= f.button :submit, "LOG IN", id: "arrow-btn" %>
        </div>
      </div>
    <% end %>
    <div class="log-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




