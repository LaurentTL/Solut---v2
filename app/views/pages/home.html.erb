<div class="left-scene" id="home-pic">
  <h1>SOL'UT</h1>
  <% if user_signed_in? %>
  <% else  %>
  <span class="border"><%= link_to "LOGIN", new_user_session_path, class:"btn-login" %></span>
  <% end %>
  <span class="border"><%= link_to "DISCOVER", events_path, class:"btn-login" %></span>
</div>
<div class="right-scene">
  <div class="container-profile">
    <h2 class="title-profile">SIGN IN</h2>
    <div class="container-login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <div class="btn-position-profile">
            <%= f.button :submit, "LOG IN", id: "profile-btn" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



